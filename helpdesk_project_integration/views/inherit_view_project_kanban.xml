    <!-- project.project inherit tree view -->
    <record id="view_id" model="ir.ui.view">
        <field name="name">project.project.inherit.view.tree</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='toggle_active']" position="after">
                <button class="oe_stat_button" name="tickets_count" type="object" icon="fa-ticket">
                    <field string="Tickets" name="tickets_count" widget="statinfo"/>
                </button>
                <button class="oe_stat_button" name="open_tickets_count" type="object" icon="fa-envelope-open">
                    <field string="Open Tickets" name="open_tickets_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>